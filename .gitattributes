# Cross-platform line ending configuration
* text=auto

# Explicitly set line endings for specific file types
*.cpp text eol=lf
*.h text eol=lf
*.hpp text eol=lf
*.c text eol=lf
*.cc text eol=lf
*.cxx text eol=lf
*.cmake text eol=lf
*.txt text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.xml text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.icns binary
*.dmg binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.a binary
*.lib binary

# Qt specific
*.ui text eol=lf
*.qrc text eol=lf
*.pro text eol=lf
*.pri text eol=lf
*.ts text eol=lf

# Build files
Makefile text eol=lf
CMakeLists.txt text eol=lf
*.cmake text eol=lf

# Documentation
README* text eol=lf
CHANGELOG* text eol=lf
CONTRIBUTORS* text eol=lf
COPYING* text eol=lf
INSTALL* text eol=lf
NEWS* text eol=lf
AUTHORS* text eol=lf